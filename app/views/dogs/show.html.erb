<h1><%= @dog.name %></h1>

<%if @dog.image.present? %><%= image_tag @dog.image, :class => 'feature' %><% end %>

<br>
More Details

<br>
<% if @showmatches %>
<%= link_to 'View Matches', "/woofs/#{params[:id]}" %>
<% else %>
<%= link_to 'View Status Details', "/woofs/#{params[:id]}/status" %>
<% end %>

<div class="controls">
    <%= link_to 'Edit Dog', edit_dog_path(@dog.id) %>
    <% if !(@showmatches) %><%= link_to 'Delete Dog', "/dogs/#{params[:id]}/delete" %><% end %>
</div>