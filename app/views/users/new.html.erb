<h1>Sign Up!</h1>
<% if @user.errors.any? %>
    <ol>
    <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
    <% end %>
    </ol>
<% end %>

<%= form_for @user do |f| %>
    <%= f.label :email %><br>
    <%= f.email_field :email, :required => true %><br>
    <%= f.label :dob, "Date of Birth" %><br>
    <%= f.text_field :dob, :placeholder => 'YYYY-MM-DD', :required => true %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password, :required => true  %><br>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation, :required => true  %><br><br>
    <%= f.submit "Sign Up", :class => 'button'  %><br>
<% end %>
