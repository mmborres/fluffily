<h1>Set up Breeding Appointment</h2>
<!--
<%if @currentDog_img.present? %><%= image_tag @currentDog_img, :class => 'currstatus' %><% end %>
<%if @partnerDog_img.present? %><%= image_tag @partnerDog_img, :class => 'currstatus' %><% end %>
-->
<div class="divflex">
<div class="imgoverlay"><%if @currentDog_img.present? %><%= image_tag @currentDog_img, :class => 'currstatus' %><% end %><div class="bottom-right">&hearts;<%= @name %>&hearts;</div></div>
<div class="imgoverlay"><%if @partnerDog_img.present? %><%= image_tag @partnerDog_img, :class => 'currstatus' %><% end %><div class="bottom-left">&hearts;<%= @partnerDogname%>&hearts;</div></div>
</div>


<form action="/breedappts/<%= @currentDog_id %>/setupbreedappt/<%= @woof_id %>" class="pLabel">
  <br>When?<br>
  <input type="date" name="breedappt[bdate]" id="breedappt[bdate]">
  <br><br>
  Where?<br>
  <input type="text" name="breedappt[place]" id="breedappt[place]">
  <br><br>
  Add Notes: (will be saved in the Messages)<br>
  <textarea rows = "5" cols = "78" name="message_text" id="message_text"></textarea>
  <br><br>
  <button>Set it up!</button>
  <br>&nbsp;
</form> 

<br><br>

<%= link_to 'Back to My Dogs', dogs_path %>


